<p id="notice"><%= notice %></p>

<h1>Agregue su Ingrediente</h1>

<table>
  <thead>
    <tr>
      <th>Click debajo</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredientes.each do |ingrediente| %>
      <tr>
        <td><%= ingrediente.nombre %></td>
        <td><%= ingrediente.valor %></td>
        <td><%= ingrediente.pizza1 %></td>
        <td><%= link_to 'Show', ingrediente %></td>
        <td><%= link_to 'Edit', edit_ingrediente_path(ingrediente) %></td>
        <td><%= link_to 'Destroy', ingrediente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingrediente', new_ingrediente_path %>
